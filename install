git clone https://github.com/RootGPT-YouTube/FedoraUP.git
echo -e "${BOLD}Richiesta password di root per rendere eseguibile lo script:${RESET}"
sleep 1
sudo chmod a+x ~/FedoraUP/aggiorna
echo -e "${BOLD}Copia script in /usr/local/bin/...${RESET}"
sleep 2
sudo cp ~/FedoraUP/aggiorna /usr/local/bin/aggiorna
echo -e "${BOLD}Pulizia repository clonato...${RESET}"
sleep 2
sudo rm -fr ~/FedoraUP
echo -e "${BOLD}Fine installazione. Da adesso avrai il comando aggiorna da lanciare da terminale per fare aggiornamento e manutenzione della tua distro Fedora.${RESET}"
read
